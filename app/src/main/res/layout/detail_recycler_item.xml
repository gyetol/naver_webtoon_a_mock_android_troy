<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/gridbackground"
    >

    <ImageView
        android:id="@+id/detail_recycler_image"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:src="@drawable/webtoon_viewpager_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/detail_recycler_text_area"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        android:padding="5dp"
        />
    <LinearLayout
        android:id="@+id/detail_recycler_text_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/detail_recycler_image"
        >

        <TextView
            android:id="@+id/detail_recycler_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22í™”"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/detail_black_star"
                android:layout_gravity="center_vertical"
                />

        <TextView
            android:id="@+id/detail_recycler_star_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.79  20.11.09"
            android:textSize="12dp"
            android:layout_marginBottom="3dp"
            />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>