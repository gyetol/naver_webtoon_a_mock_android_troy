<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gridbackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김민석"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2020-04-26 23:18"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="신고"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/comment_best"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/comment_best" />

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="핑크맨의 정체를 알아냈어... 그는 커다란 스폰지밥이였어!! 장안철 지금보니까 뭔가 늬우치고 있다는 것이 느껴진다." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/gridbackground_bold"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/comment_up"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/comment_up_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27750"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/gridbackground_bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/comment_down"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/comment_down_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="331"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>