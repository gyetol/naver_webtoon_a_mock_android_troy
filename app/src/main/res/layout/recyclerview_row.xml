<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!--이미지-->
    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_webtoon_image"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/gridbackground"
        >


        <TextView
            android:id="@+id/main_webtoon_title"
            android:text="제목"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/redstar"
                android:layout_marginTop="0.5dp"
                />


        <TextView
            android:id="@+id/main_webtoon_starscore"
            android:text="0.00"
            android:textSize="10dp"
            android:textColor="@color/starscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:id="@+id/main_webtoon_author"
            android:text="작가"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            />
    </LinearLayout>

</LinearLayout>